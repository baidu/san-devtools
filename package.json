{
    "name": "san-devtools",
    "version": "3.0.0",
    "description": "Development tool for debugging San.js applications.",
    "private": true,
    "scripts": {
        "start": "yarn workspace san-devtools start",
        "build:standalone": "yarn workspace san-devtools build",
        "start:extensions": "yarn workspace extensions start",
        "build:extensions": "yarn workspace extensions build"
    },
    "workspaces": [
        "packages/*"
    ],
    "files": [
        "packages"
    ],
    "devDependencies": {
        "autoprefixer": "^9.8.0",
        "@typescript-eslint/parser": "2.34.0",
        "@typescript-eslint/eslint-plugin": "2.34.0",
        "@babel/core": "^7.9.6",
        "babel-cli": "^6.26.0",
        "babel-eslint": "^10.1.0",
        "babel-plugin-import": "^1.13.0",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/plugin-proposal-export-default-from": "^7.8.3",
        "@babel/plugin-proposal-optional-chaining": "^7.10.1",
        "@babel/plugin-transform-modules-commonjs": "^7.10.1",
        "@babel/preset-env": "^7.9.6",
        "@babel/preset-typescript": "^7.9.0",
        "@ecomfe/eslint-config": "^3.2.0",
        "@commitlint/cli": "^8.3.4",
        "@commitlint/core": "^8.3.4",
        "@commitlint/travis-cli": "^8.3.5",
        "eslint-plugin-jest": "^23.8.2",
        "@ksky521/cz-emoji": "^1.2.1",
        "commitizen": "^4.0.3",
        "commitlint-config-gitmoji": "^1.0.1",
        "eslint": "^6.8.0",
        "eslint-plugin-babel": "^5.3.0"
    },
    "lint-staged": {
        "!(example|dist|output|__mocks__)/**/*.(ts|js)": [
            "eslint"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "commitlint": {
        "extends": [
            "gitmoji"
        ],
        "rules": {
            "header-max-length": [
                2,
                "always",
                120
            ],
            "subject-case": [
                0,
                "always",
                "sentence-case"
            ]
        }
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/@ksky521/cz-emoji"
        },
        "@ksky521/cz-emoji": {
            "types": [
                {
                    "emoji": "üåü",
                    "code": ":sparkles:",
                    "description": "Introducing new features.",
                    "name": "feat"
                },
                {
                    "emoji": "üêõ",
                    "code": ":bug:",
                    "description": "Fixing a bug.",
                    "name": "fix"
                },
                {
                    "emoji": "üöë",
                    "code": ":ambulance:",
                    "description": "Critical hotfix.",
                    "name": "quickfix"
                },
                {
                    "emoji": "‚úÖ",
                    "code": ":white_check_mark:",
                    "description": "Adding tests.",
                    "name": "test"
                },
                {
                    "emoji": "üí¨",
                    "code": ":speech_balloon:",
                    "description": "Updating text and literals.",
                    "name": "chore"
                },
                {
                    "emoji": "üì¶",
                    "code": ":package:",
                    "description": "Releasing / Version tags.",
                    "name": "release"
                },
                {
                    "emoji": "üìù",
                    "code": ":pencil:",
                    "description": "Writing docs.",
                    "name": "docs"
                },
                {
                    "emoji": "üö®",
                    "code": ":rotating_light:",
                    "description": "Removing linter warnings.",
                    "name": "lint"
                },
                {
                    "emoji": "‚è™",
                    "code": ":rewind:",
                    "description": "Reverting changes.",
                    "name": "revert"
                },
                {
                    "emoji": "üîÄ",
                    "code": ":twisted_rightwards_arrows:",
                    "description": "Merging branches.",
                    "name": "merge"
                },
                {
                    "emoji": "üëå",
                    "code": ":ok_hand:",
                    "description": "Updating code due to code review changes.",
                    "name": "review"
                },
                {
                    "emoji": "üé®",
                    "code": ":art:",
                    "description": "Improving structure / format of the code.",
                    "name": "style"
                },
                {
                    "emoji": "üíÑ",
                    "code": ":lipstick:",
                    "description": "Updating the UI and style files.",
                    "name": "ui"
                },
                {
                    "emoji": "üëΩ",
                    "code": ":alien:",
                    "description": "Updating code due to external API changes.",
                    "name": "compat"
                },
                {
                    "emoji": "üí•",
                    "code": ":boom:",
                    "description": " Refactoring code.",
                    "name": "refactor"
                },
                {
                    "emoji": "üéâ",
                    "code": ":tada:",
                    "description": "Initial commit.",
                    "name": "init"
                }
            ],
            "skipQuestions": [
                "scope",
                "body",
                "issues"
            ]
        }
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/baidu/san-devtools"
    },
    "author": "ksky521 <ksky521@gmail.com>",
    "license": "MIT"
}
